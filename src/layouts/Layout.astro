---
const title = (Astro.props && Astro.props.title) || 'Álvaro Lostal - Portfolio';
const description =
  (Astro.props && Astro.props.description) ||
  'Portfolio profesional de Álvaro Lostal, desarrollador frontend e ingeniero informático.';
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const defaultOgImage = new URL('/assets/og/azulejos.jpg', Astro.site).href;
const ogImage = (Astro.props && Astro.props.ogImage) || defaultOgImage;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="format-detection" content="telephone=no" />

    <!-- Seguridad y rendimiento -->
    <meta http-equiv="X-Content-Type-Options" content="nosniff" />
    <meta http-equiv="X-XSS-Protection" content="1; mode=block" />
    <meta name="referrer" content="strict-origin-when-cross-origin" />

    <!-- DNS Prefetch para recursos externos -->
    <link rel="dns-prefetch" href="//fonts.googleapis.com" />
    <link rel="dns-prefetch" href="//fonts.gstatic.com" />
    <link rel="dns-prefetch" href="//cdnjs.cloudflare.com" />
    <link rel="dns-prefetch" href="//www.googletagmanager.com" />

  <!-- Preload Geist fonts (WOFF2) -->
  <link rel="preload" href="/assets/geist/Geist-Regular.woff2" as="font" type="font/woff2" crossorigin>
  <link rel="preload" href="/assets/geist/Geist-SemiBold.woff2" as="font" type="font/woff2" crossorigin>

    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL.href} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="Álvaro Lostal - Portfolio" />

    <!-- Font Awesome preload -->
    <link
      rel="preload"
      href="/assets/fontawesome/all.min.css"
      as="style"
      onload="this.onload=null;this.rel='stylesheet';document.documentElement.classList.add('fonts-loaded')"
    />
    <noscript>
      <link rel="stylesheet" href="/assets/fontawesome/all.min.css" />
    </noscript>

    <!-- Inline theme setter (very small) -->
    <script>
      try {
        const prefersDark =
          window.matchMedia &&
          window.matchMedia('(prefers-color-scheme: dark)').matches;
        document.documentElement.setAttribute(
          'data-theme',
          prefersDark ? 'dark' : 'light'
        );
      } catch (e) {
        // no-op
      }
    </script>
    <!-- Favicons: configuración equilibrada y común en sitios de portfolio -->
    <!-- Raíz .ico (soporte legacy y fallback) -->
    <link rel="icon" href="/favicon.ico" />
    <!-- SVG fuente (alta calidad, navegadores que lo soportan) -->
    <link rel="icon" type="image/svg+xml" href="/assets/favicons/favicon.svg" />
    <!-- PNGs para navegadores/servicios que prefieren bitmap, tamaños comunes -->
    <link
      rel="icon"
      type="image/png"
      sizes="32x32"
      href="/assets/favicons/favicon-32x32.png"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="16x16"
      href="/assets/favicons/favicon-16x16.png"
    />
    <!-- iOS touch icon -->
    <link rel="apple-touch-icon" href="/assets/favicons/apple-touch-icon.png" />
    <!-- Manifest (opcional pero útil para PWA / Android / coherencia) -->
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#ffffff" />
  </head>
  <body>
    <a href="#main" class="skip-link">Saltar al contenido principal</a>

    <!-- Elemento para notificaciones relacionadas con el tema (controlado por theme.js) -->
    <div id="theme-notification" class="theme-notification" aria-hidden="true">
    </div>
    <slot />

    <!-- Deferred loader moved to external file for reliability and easier debugging -->
    <script defer src="/scripts/deferred-loader.js"></script>

    <style is:global>
      @import '../styles/variables.css';
      @import '../styles/global.css';
      @import '../styles/font-optimization.css';
      @import '../styles/navigation.css';
      @import '../styles/hero.css';
      @import '../styles/sections.css';
      @import '../styles/components.css';
      @import '../styles/floating-contact.css';
    </style>
  </body>
</html>
