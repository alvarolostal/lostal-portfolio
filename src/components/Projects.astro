---
import { Picture } from 'astro:assets';
import vivenzaImg from '../assets/projects/vivenza-preview.png';
import creativeHandsImg from '../assets/projects/creative-hands-preview.png';
---

<section class="projects-section section-alt" id="projects">
  <div class="wrapper">
    <div class="section-header fade-in">
      <div class="section-label" data-i18n="projects.label">Proyectos</div>
      <h2 class="section-title" data-i18n="projects.title">Mi Trabajo</h2>
      <p class="section-description" data-i18n="projects.description">
        Estos proyectos web reflejan mi enfoque en el diseño minimalista, una UX
        cuidada y buenas prácticas de desarrollo.
      </p>
    </div>
  </div>

  <div class="projects-section__content">
    <div class="projects-carousel">
      <div class="projects-carousel__nav slider-nav">
        <button
          class="slider-nav__item slider-nav__item_prev"
          aria-label="Proyecto anterior"
          data-i18n-aria="projects.prev"
          type="button"
        >
          <i class="fas fa-chevron-left" aria-hidden="true"></i>
        </button>
        <button
          class="slider-nav__item slider-nav__item_next"
          aria-label="Siguiente proyecto"
          data-i18n-aria="projects.next"
          type="button"
        >
          <i class="fas fa-chevron-right" aria-hidden="true"></i>
        </button>
      </div>

      <div class="projects-carousel__slider swiper">
        <div class="projects-carousel__wrapper swiper-wrapper">
          <div class="projects-carousel__slide swiper-slide">
            <div class="carousel-item">
              <Picture
                src={vivenzaImg}
                alt="Rediseño Vivenza Expo"
                widths={[285, 400, 800]}
                sizes="(max-width: 768px) 285px, (max-width: 1024px) 400px, 500px"
                formats={['avif', 'webp']}
                loading="lazy"
                quality={80}
                class="carousel-item__image"
              />
              <div class="carousel-item__content">
                <div class="carousel-item__header">
                  <div class="carousel-item__header-inner">
                    <div class="carousel-item__price">
                      <span class="tag">
                        <img
                          src="/assets/tech-icons/nextjs.svg"
                          alt="Next.js"
                          class="tech-mini-icon"
                          loading="lazy"
                        />
                        Next.js
                      </span>
                    </div>
                    <div class="carousel-item__author">
                      <a
                        class="carousel-item__link"
                        href="https://vivenza.netlify.app/"
                        target="_blank"
                        rel="noopener noreferrer"
                      >
                        <i class="fas fa-external-link-alt"></i>
                        <span data-i18n="projects.view">Preview</span>
                      </a>
                    </div>
                  </div>
                </div>

                <div class="carousel-item__info">
                  <h2
                    class="carousel-item__title"
                    data-i18n="projects.vivenza.title"
                  >
                    Rediseño Vivenza Expo
                  </h2>
                  <div
                    class="carousel-item__text"
                    data-i18n="projects.vivenza.description"
                  >
                    Rediseño completo de la landing page de Vivenza Expo,
                    aplicando principios de diseño moderno.
                  </div>
                </div>

                <div class="carousel-item__footer">
                  <button
                    class="carousel-item__btn"
                    type="button"
                    aria-label="Ver más sobre Rediseño Vivenza Expo"
                    data-i18n-aria="projects.vivenza.more"
                    data-project="vivenza"
                  >
                    <span
                      class="carousel-item__btn-text"
                      data-i18n="projects.more">Ver más</span
                    >
                    <i class="fas fa-arrow-right" aria-hidden="true"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>

          <div class="projects-carousel__slide swiper-slide">
            <div class="carousel-item">
              <Picture
                src={creativeHandsImg}
                alt="Creative Hands"
                widths={[285, 400, 800]}
                sizes="(max-width: 768px) 285px, (max-width: 1024px) 400px, 500px"
                formats={['avif', 'webp']}
                loading="lazy"
                quality={80}
                class="carousel-item__image"
              />

              <div class="carousel-item__content">
                <div class="carousel-item__header">
                  <div class="carousel-item__header-inner">
                    <div class="carousel-item__price">
                      <span class="tag">
                        <img
                          src="/assets/tech-icons/react.svg"
                          alt="React"
                          class="tech-mini-icon"
                          loading="lazy"
                        />
                        React
                      </span>
                    </div>
                    <div class="carousel-item__author">
                      <a
                        class="carousel-item__link"
                        href="https://creative-hands-cjzg.onrender.com/"
                        target="_blank"
                        rel="noopener noreferrer"
                      >
                        <i class="fas fa-external-link-alt"></i>
                        <span data-i18n="projects.view">Preview</span>
                      </a>
                    </div>
                  </div>
                </div>

                <div class="carousel-item__info">
                  <h2
                    class="carousel-item__title"
                    data-i18n="projects.creative.title"
                  >
                    Creative Hands
                  </h2>
                  <div
                    class="carousel-item__text"
                    data-i18n="projects.creative.description"
                  >
                    Tienda PWA con autenticación JWT y chat en tiempo real
                    (Socket.io).
                  </div>
                </div>

                <div class="carousel-item__footer">
                  <button
                    class="carousel-item__btn"
                    type="button"
                    aria-label="Ver más sobre Creative Hands"
                    data-i18n-aria="projects.creative.more"
                    data-project="creative"
                  >
                    <span
                      class="carousel-item__btn-text"
                      data-i18n="projects.more">Ver más</span
                    >
                    <i class="fas fa-arrow-right" aria-hidden="true"></i>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal flotante para detalles de proyectos -->
  <div class="project-modal" id="projectModal">
    <div class="project-modal__overlay"></div>
    <div class="project-modal__container">
      <button
        class="project-modal__close"
        type="button"
        aria-label="Cerrar modal"
        data-i18n-aria="projects.modal.close"
      >
        <i class="fas fa-times"></i>
      </button>
      <div class="project-modal__content" id="modalContent">
        <!-- Contenido dinámico del proyecto -->
      </div>
    </div>
  </div>
</section>

<!-- Templates para el contenido de cada proyecto -->
<template id="vivenza-template">
  <div class="modal-project">
    <h3 class="modal-project__title" data-i18n="projects.vivenza.title">
      Rediseño Vivenza Expo
    </h3>
    <h4 class="modal-project__subtitle" data-i18n="projects.vivenza.subtitle">
      Rediseño Conceptual
    </h4>
    <p
      class="modal-project__description"
      data-i18n="projects.vivenza.description"
    >
      Rediseño completo de la landing page de Vivenza Expo, aplicando
      principios de diseño moderno.
    </p>

    <div class="modal-section">
      <h5 class="modal-section__title" data-i18n="projects.vivenza.improvements">
        Mejoras implementadas:
      </h5>
      <ul class="modal-list">
        <li data-i18n="projects.vivenza.improvement1">
          Diseño responsivo y accesible
        </li>
        <li data-i18n="projects.vivenza.improvement2">
          Optimización de performance y carga
        </li>
        <li data-i18n="projects.vivenza.improvement3">
          Jerarquía visual mejorada
        </li>
        <li data-i18n="projects.vivenza.improvement4">
          Experiencia de usuario moderna
        </li>
      </ul>
    </div>

    <div class="modal-section">
      <h5 class="modal-section__title" data-i18n="projects.vivenza.tech">
        Tecnologías:
      </h5>
      <div class="modal-tags">
        <span class="tag">
          <img
            src="/assets/tech-icons/html5.svg"
            alt="HTML5"
            class="tech-mini-icon"
            loading="lazy"
          />
          HTML5
        </span>
        <span class="tag">
          <img
            src="/assets/tech-icons/css3.svg"
            alt="CSS3"
            class="tech-mini-icon"
            loading="lazy"
          />
          CSS3
        </span>
        <span class="tag">
          <img
            src="/assets/tech-icons/javascript.svg"
            alt="JavaScript"
            class="tech-mini-icon"
            loading="lazy"
          />
          JavaScript
        </span>
        <span class="tag">
          <img
            src="/assets/tech-icons/nextjs.svg"
            alt="Next.js"
            class="tech-mini-icon"
            loading="lazy"
          />
          Next.js
        </span>
      </div>
    </div>

    <div class="modal-section">
      <h5 class="modal-section__title" data-i18n="projects.vivenza.links">
        Enlaces:
      </h5>
      <div class="modal-links">
        <a
          href="https://vivenza.netlify.app/"
          target="_blank"
          rel="noopener noreferrer"
          class="modal-link"
        >
          <i class="fas fa-external-link-alt"></i>
          <span data-i18n="projects.vivenza.preview">Preview</span>
        </a>
        <a
          href="https://vivenzaexpo.es/"
          target="_blank"
          rel="noopener noreferrer"
          class="modal-link"
        >
          <i class="fas fa-link"></i>
          <span data-i18n="projects.vivenza.original">Original</span>
        </a>
      </div>
    </div>
  </div>
</template>

<template id="creative-template">
  <div class="modal-project">
    <h3 class="modal-project__title" data-i18n="projects.creative.title">
      Creative Hands
    </h3>
    <h4 class="modal-project__subtitle" data-i18n="projects.creative.subtitle">
      Plataforma E-commerce de Artesanía
    </h4>
    <p
      class="modal-project__description"
      data-i18n="projects.creative.description"
    >
      Tienda PWA con autenticación JWT y chat en tiempo real (Socket.io).
    </p>

    <div class="modal-section">
      <h5 class="modal-section__title" data-i18n="projects.creative.features">
        Funcionalidades implementadas:
      </h5>
      <ul class="modal-list">
        <li data-i18n="projects.creative.feature1">
          Autenticación segura con JWT y cookies httpOnly
        </li>
        <li data-i18n="projects.creative.feature2">
          Panel de administración con CRUD completo de productos/categorías
        </li>
        <li data-i18n="projects.creative.feature3">
          Chat en tiempo real con Socket.io (múltiples conversaciones
          simultáneas)
        </li>
        <li data-i18n="projects.creative.feature4">
          Subida de imágenes optimizadas a Cloudinary CDN
        </li>
        <li data-i18n="projects.creative.feature5">
          Sistema de valoraciones y reseñas de productos
        </li>
        <li data-i18n="projects.creative.feature6">
          Diseño responsivo con tema claro/oscuro automático
        </li>
      </ul>
    </div>

    <div class="modal-section">
      <h5 class="modal-section__title" data-i18n="projects.creative.tech">
        Tecnologías:
      </h5>
      <div class="modal-tags">
        <span class="tag">
          <img
            src="/assets/tech-icons/react.svg"
            alt="React"
            class="tech-mini-icon"
            loading="lazy"
          />
          React
        </span>
        <span class="tag">
          <img
            src="/assets/tech-icons/nodejs.svg"
            alt="Node.js"
            class="tech-mini-icon"
            loading="lazy"
          />
          Node.js
        </span>
        <span class="tag">
          <img
            src="/assets/tech-icons/mongodb.svg"
            alt="MongoDB"
            class="tech-mini-icon"
            loading="lazy"
          />
          MongoDB
        </span>
        <span class="tag">
          <img
            src="/assets/tech-icons/socketio.svg"
            alt="Socket.io"
            class="tech-mini-icon"
            loading="lazy"
          />
          Socket.io
        </span>
        <span class="tag">
          <img
            src="/assets/tech-icons/tailwind.svg"
            alt="Tailwind"
            class="tech-mini-icon"
            loading="lazy"
          />
          TailwindCSS
        </span>
      </div>
    </div>

    <div class="modal-section">
      <h5 class="modal-section__title" data-i18n="projects.creative.links">
        Enlaces:
      </h5>
      <div class="modal-links">
        <a
          href="https://creative-hands-cjzg.onrender.com"
          target="_blank"
          rel="noopener noreferrer"
          class="modal-link"
        >
          <i class="fas fa-external-link-alt"></i>
          <span data-i18n="projects.creative.preview">Preview</span>
        </a>
        <a
          href="https://github.com/lostal/creative-hands"
          target="_blank"
          rel="noopener noreferrer"
          class="modal-link"
        >
          <i class="fab fa-github"></i>
          <span data-i18n="projects.creative.repository">Repositorio</span>
        </a>
      </div>
    </div>
  </div>
</template>

<script>
  import '../lib/projects-carousel.js';
</script>
