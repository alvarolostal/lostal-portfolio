<section class="hero">
  <div class="hero-content">
    <div class="hero-image-wrapper">
      <img src="/alvaro.webp" alt="Álvaro Lostal" class="hero-image" />
    </div>
    <div class="hero-subtitle">Hola, soy</div>
    <h1 class="hero-title">Álvaro Lostal</h1>
