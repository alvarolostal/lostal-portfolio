---
// src/components/Experience.astro
---

<section id="experience" style="background: var(--bg-secondary);">
  <div class="container">
    <div class="section-header fade-in">
      <div class="section-label">Trayectoria</div>
      <h2 class="section-title">Experiencia & Educación</h2>
    </div>

    <div class="experience-grid">
      <!-- Educación -->
      <div class="experience-column">
        <div class="column-header">
          <h3 class="column-title">Educación</h3>
          <div class="column-divider"></div>
        </div>

        <div class="timeline">
          <div class="timeline-item fade-in">
            <div class="timeline-header">
              <h4 class="timeline-title">
                Grado en Ingeniería Informática
              </h4>
              <span class="timeline-date">Sep 2022 - Jun 2026</span>
            </div>
            <div class="timeline-subtitle">
              Universidad Europea del Atlántico
            </div>
            <p class="timeline-description">
              Formación integral en ingeniería informática con
              especialización en desarrollo web y seguridad.
            </p>
            <ul class="timeline-list">
              <li>Diseño Web y Experiencia de Usuario</li>
              <li>Ingeniería del Software</li>
              <li>Seguridad Informática y Criptografía</li>
            </ul>
          </div>

          <div class="timeline-item fade-in">
            <div class="timeline-header">
              <h4 class="timeline-title">
                B2 First Certificate in English
              </h4>
              <span class="timeline-date">2021</span>
            </div>
            <div class="timeline-subtitle">
              Cambridge English • Score: 162
            </div>
            <p class="timeline-description">
              Certificación oficial de nivel B2 del Marco Común Europeo de
              Referencia para las lenguas.
            </p>
          </div>
        </div>
      </div>

      <!-- Experiencia -->
      <div class="experience-column">
        <div class="column-header">
          <h3 class="column-title">Experiencia</h3>
          <div class="column-divider"></div>
        </div>

        <div class="timeline">
          <div class="timeline-item fade-in">
            <div class="timeline-header">
              <h4 class="timeline-title">Prácticas en Desarrollo Web</h4>
              <span class="timeline-date">1 mes</span>
            </div>
            <div class="timeline-subtitle">Eurocastalia</div>
            <p class="timeline-description">
              Prácticas curriculares enfocadas en el desarrollo de
              aplicaciones web modernas, trabajando con tecnologías frontend
              y colaborando en proyectos reales.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .experience-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 60px;
    max-width: 1000px;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .experience-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  .experience-column {
    width: 100%;
  }

  .column-header {
    margin-bottom: 40px;
    text-align: center;
  }

  .column-title {
    font-size: 20px;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 6px;
  }

  .column-divider {
    height: 2px;
    width: 40px;
    background: var(--accent-primary);
    margin: 0 auto;
  }
</style>