---
// src/components/Skills.astro
---

<section id="skills">
  <div class="container">
    <div class="section-header fade-in">
      <div class="section-label">Habilidades</div>
      <h2 class="section-title">Competencias Técnicas</h2>
      <p class="section-description">
        Tecnologías y herramientas con las que trabajo día a día
      </p>
    </div>

    <div class="skills-grid">
      <div class="skill-card fade-in">
        <i class="fas fa-code skill-icon"></i>
        <h3 class="skill-title">Lenguajes</h3>
        <div class="skill-tags">
          <span class="tag">JavaScript</span>
          <span class="tag">HTML5</span>
          <span class="tag">CSS3</span>
          <span class="tag">Java</span>
          <span class="tag">Python</span>
        </div>
      </div>

      <div class="skill-card fade-in">
        <i class="fas fa-layer-group skill-icon"></i>
        <h3 class="skill-title">Frameworks</h3>
        <div class="skill-tags">
          <span class="tag">React.js</span>
          <span class="tag">Astro</span>
          <span class="tag">Next.js</span>
        </div>
      </div>

      <div class="skill-card fade-in">
        <i class="fas fa-tools skill-icon"></i>
        <h3 class="skill-title">Herramientas</h3>
        <div class="skill-tags">
          <span class="tag">GitHub</span>
          <span class="tag">VS Code</span>
          <span class="tag">Figma</span>
          <span class="tag">Git</span>
        </div>
      </div>
    </div>
  </div>
</section>