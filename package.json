{
  "name": "lostal-portfolio",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "npm run build:scripts && astro dev",
    "build": "npm run build:scripts && astro build",
    "build:scripts": "node ./scripts/build-scripts.mjs",
    "watch:scripts": "node ./scripts/build-scripts.mjs --watch",
    "rebuild:all": "node ./scripts/rebuild-all.mjs",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "eslint . --ext .js,.ts,.astro",
    "lint:fix": "eslint . --ext .js,.ts,.astro --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "dependencies": {
    "@astrojs/sitemap": "^3.6.0",
    "astro": "^5.14.4"
  },
  "devDependencies": {
    "fontkit": "^2.0.2",
    "sharp": "^0.34.4",
    "@eslint/js": "^9.38.0",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "astro-eslint-parser": "^1.2.2",
    "chokidar": "^3.5.3",
    "esbuild": "^0.18.20",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-astro": "^1.3.1",
    "netlify-cli": "^23.9.5",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1"
